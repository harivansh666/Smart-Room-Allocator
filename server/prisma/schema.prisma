generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  userId        Int     @id @default(autoincrement())   
  name          String
  email         String  @unique 
  password      String
  isAdmin       Boolean @default(false)
  duty          String?
  roomsAllocated Room[]

  createdAt     DateTime @default(now())
}

model Room {
  roomId            Int     @id @default(autoincrement()) 
  exam              String
  noOfStudents      Int
  roomCapacity      Int
  allocatedTeacherId Int?
  allocatedTeacher   User?   @relation(fields: [allocatedTeacherId], references: [userId])
}